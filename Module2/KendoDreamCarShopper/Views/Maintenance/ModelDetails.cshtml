
<h2>Maintenance - Model Details</h2><br/>
<div id="modelDetails" class="inputcontainer">
    <label for="make">Make</label>
    <!-- Explicitly place the Kendo Validation tooltip as specified in https://docs.telerik.com/kendo-ui/controls/editors/validator/overview -->
    <!-- It is bound to input name through "data-for" attribute. -->
    <input id="make"
            name="make"
            placeholder="Select Make"
            data-text-field="Text"
            data-value-field="Id"
            data-bind="source: model.Makes, value: model.MakeId"
            required
            data-required-msg="Must select a Make"
    />
    <span class="k-invalid-msg" data-for="make"></span>
    <br />

    <label for="year">Year</label>
    <input type="number"
           id="year"
           placeholder="Year"
           data-bind="value: model.Year"
           class="k-textbox"
           required
           validationmessage="Please enter Year"
           min="1950"
           max="2025" /><br />

    <label for="model">Model</label>
    <input type="text"
           id="model"
           placeholder="Model Name"
           data-bind="value: model.Name"
           class="k-textbox"
           required
           validationmessage="Please enter Model Name"
           maxlength="75" /><br />

    <label for="engineType">Engine</label>
    <input type="text"
           id="engineType"
           placeholder="Engine Type"
           data-bind="value: model.EngineType"
           class="k-textbox"
           required
           validationmessage="Please enter Engine Type"
           maxlength="75" /><br />

    <label for="breakHorsepower">Break Horsepower</label>
    <input type="number"
           id="breakHorsepower"
           placeholder="Break Horsepower"
           data-bind="value: model.BreakHorsepower"
           class="k-textbox"
           required
           validationmessage="Please enter Break Horsepower"
           min="300"
           max="2000" /><br />

    <label for="zeroToSixty">0 - 60 Time (secs)</label>
    <input type="number"
           id="zeroToSixty"
           placeholder="0 - 60 Time (secs)"
           data-bind="value: model.ZeroToSixty"
           class="k-textbox"
           required
           validationmessage="Please enter the time required for acceleration from 0 to 60 mph"
           min="1"
           max="10" /><br />

    <label for="topSpeed">Top Speed (mph)</label>
    <input type="number"
           id="topSpeed"
           placeholder="Top Speed (mph)"
           data-bind="value: model.TopSpeed"
           class="k-textbox"
           required
           validationmessage="Please enter Top speed"
           min="1"
           max="1000" /><br />

    <label for="basePrice">Base Price</label>
    <input type="number"
           id="basePrice"
           placeholder="Base Price (US $)"
           data-bind="value: model.BasePrice"
           class="k-textbox"
           required
           validationmessage="Please enter Base Price" /><br />

    <label for="description" class="textareaLabel">Description</label>
    <textarea id="description"
          placeholder="Description"
          data-bind="value: model.Description"
          class="k-textbox"
           required
           validationmessage="Please enter Description"
           maxlength="2000" >
    </textarea><br />

    <div id="images" data-bind="source: model.Images"></div>
    <br />

    <input id="save" type="button" class="k-button" value="Save" /><br />
    <span id="status"></span>
</div>

@section scripts
{
    <script src="~/Scripts/App/Views/Maintenance/modelDetails.js"></script>
}
